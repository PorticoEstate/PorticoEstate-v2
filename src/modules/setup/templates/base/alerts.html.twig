{# Alerts template for setup module #}

{% block error_message %}
<div class="error-container" style="background-color: #ffebee; border-left: 4px solid #f44336; padding: 15px; margin: 15px 0;">
    <h2 style="color: #d32f2f; margin-top: 0;">{{ title }}</h2>
    <p>{{ message|raw }}</p>
</div>
{% endblock %}

