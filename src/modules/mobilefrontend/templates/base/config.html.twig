{# Config template #}
{% block header %}
<form method="POST" action="{{ action_url }}">
	<table class="pure-table pure-table-bordered pure-table-striped pure-form">
		<tr>
			<td colspan="2"><font color="{{ th_text }}">&nbsp;<b>{{ title }}</b></font></td>
		</tr>
		{% endblock %}
		{% block body %}
		<tr>
			<td colspan="2">&nbsp;</td>
		</tr>
		<tr>
			<td colspan="2">&nbsp;<b>{{ lang('mobilefrontend') }}</b></td>
		</tr>
		<tr>
			<td>{{ lang('auth_type') }}:</td>
			<td>
				<select name="newsettings[auth_type]" class="pure-u-1">
					<option value="0" {{ selected_auth_type_0|raw }}> {{ lang('Same as framework') }}: </option>
					<option value="sql" {{ selected_auth_type_sql|raw }}> {{ lang('SQL') }}: </option>
					<option value="customsso" {{ selected_auth_type_customsso|raw }}> {{ lang('Custom SSO') }}: </option>
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('Use_cookies_to_pass_sessionid') }}:</td>
			<td>
				<select name="newsettings[usecookies]" class="pure-u-1">
					<option value="">{{ lang('No') }}</option>
					<option value="True"{{ selected_usecookies_True|raw }}>{{ lang('Yes') }}</option>
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('Use_ssl_for_backend_links') }}:</td>
			<td>
				<select name="newsettings[backend_ssl]" class="pure-u-1">
					<option value="">{{ lang('No') }}</option>
					<option value="True"{{ selected_backend_ssl_True|raw }}>{{ lang('Yes') }}</option>
				</select>
			</td>
		</tr>
		<tr>
			<td>{lang_cookie_domain_for_sessions_-_if_Same_as_framework_leave_empty}</td>
			<td><input name="newsettings[cookie_domain]" value="{{ value_cookie_domain|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('Anonymous_user') }}:</td>
			<td><input name="newsettings[anonymous_user]" value="{{ value_anonymous_user|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('Anonymous_password') }}:</td>
			<td><input type="password" name="newsettings[anonymous_passwd]" value="{{ value_anonymous_passwd|raw }}" autocomplete="off"
					   readonly="readonly" onfocus="this.removeAttribute('readonly');" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('external_host_address') }}:{{ lang('example') }}: https://www.bergen.kommune.no</td>
			<td><input name="newsettings[external_site_address]" value="{{ value_external_site_address|raw }}"/></td>
		</tr>
		{% endblock %}
		{% block footer %}
		<tr>
			<td colspan="2">
				&nbsp;
			</td>
		</tr>
		<tr>
			<td colspan="2" align="center">
				<input type="submit" name="submit" value="{{ lang('submit') }}" class="pure-button"/>
				<input type="submit" name="cancel" value="{{ lang('cancel') }}" class="pure-button"/>
			</td>
		</tr>
	</table>
</form>
{% endblock %}
