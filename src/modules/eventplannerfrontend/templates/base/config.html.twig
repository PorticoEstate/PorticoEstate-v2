{# Config template #}
{% block header %}
<form method="POST" action="{{ action_url }}">
	<table class="pure-table pure-table-bordered">
		<tr class="th">\n        <td colspan="2">&nbsp;<b>{{ lang('{{ title }}') }}</b></td>\n    </tr>\n\n    {# {{ title }} section #}
		{% endblock %}
		{% block body %}
		<tr>
			<td colspan="2">&nbsp;</td>
		</tr>
		<tr>
			<td colspan="2">&nbsp;<b>{{ lang('bookingfrontend_settings') }}</b></td>
		</tr>
		<tr>
			<td>{{ lang('site_title') }}</td>
			<td><input name="newsettings[site_title]" value='{{ value_site_title|raw }}'></td>
		</tr>
		<tr>
			<td>{{ lang('footer_info') }}</td>
			<td><input name="newsettings[footer_info]" value='{{ value_footer_info|raw }}'></td>
		</tr>
		<tr>
			<td>{{ lang('auth_type') }}:</td>
			<td>
				<select name="newsettings[auth_type]">
					<option value="0" {{ selected_auth_type_0|raw }}> {{ lang('Same as framework') }}: </option>
					<option value="sql" {{ selected_auth_type_sql|raw }}> {{ lang('SQL') }}: </option>
					<option value="customsso" {{ selected_auth_type_customsso|raw }}> {{ lang('Custom SSO') }}: </option>
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('remote_authentication') }}:</td>
			<td>
				<select name="newsettings[authentication_method]">
					{{ hook_authentication|raw }}
				</select>
			</td>
		</tr>
		<tr class="pure-table-odd">
			<td>{{ lang('Use_cookies_to_pass_sessionid') }}:</td>
			<td>
				<select name="newsettings[usecookies]">
					<option value="">{{ lang('No') }}</option>
					<option value="True"{{ selected_usecookies_True|raw }}>{{ lang('Yes') }}</option>
				</select>
			</td>
		</tr>
		<tr>
			<td>{lang_cookie_domain_for_sessions_-_if_Same_as_framework_leave_empty}</td>
			<td><input name="newsettings[cookie_domain]" value="{{ value_cookie_domain|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('Anonymous_user') }}:</td>
			<td><input name="newsettings[anonymous_user]" value="{{ value_anonymous_user|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('Anonymous_password') }}:</td>
			<td><input type="password" name="newsettings[anonymous_passwd]" value="{{ value_anonymous_passwd|raw }}" autocomplete="off"
					   readonly="readonly" onfocus="this.removeAttribute('readonly');"></td>
		</tr>
		<tr>
			<td>{{ lang('custom_login_url') }}:</td>
			<td><input name="newsettings[custom_login_url]" value="{{ value_custom_login_url|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('custom_login_url_parameter') }}:</td>
			<td><input name="newsettings[login_parameter]" value="{{ value_login_parameter|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_header_key') }}:</td>
			<td><input name="newsettings[header_key]" value="{{ value_header_key|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_header_regular_expression') }}:</td>
			<td><input name="newsettings[header_regular_expression]" value="{{ value_header_regular_expression|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_soap_client_location') }}:</td>
			<td><input name="newsettings[soap_location]" value="{{ value_soap_location|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_soap_client_uri') }}:</td>
			<td><input name="newsettings[soap_uri]" value="{{ value_soap_uri|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_soap_client_proxy_host') }}:</td>
			<td><input name="newsettings[soap_proxy_host]" value="{{ value_soap_proxy_host|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_soap_client_proxy_port') }}:</td>
			<td><input name="newsettings[soap_proxy_port]" value="{{ value_soap_proxy_port|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_soap_client_encoding') }}:</td>
			<td><input name="newsettings[soap_encoding]" value="{{ value_soap_encoding|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_soap_client_login') }}:</td>
			<td><input name="newsettings[soap_login]" value="{{ value_soap_login|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('login_soap_client_password') }}:</td>
			<td><input type="password" name="newsettings[soap_password]" value="{{ value_soap_password|raw }}" autocomplete="off"
					   readonly="readonly" onfocus="this.removeAttribute('readonly');"></td>
		</tr>
		<tr>
			<td>{{ lang('login_soap_client_wsdl') }}:</td>
			<td><input name="newsettings[soap_wsdl]" value="{{ value_soap_wsdl|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('Debug') }}:</td>
			<td>
				<select name="newsettings[debug]">
					<option value="" {{ selected_debug_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_debug_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('google_tracker_id') }}:</td>
			<td><input name="newsettings[tracker_id]" value="{{ value_tracker_id|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('url_to_external_logout') }}:
				<br/> Redirect is computed if url ends with '='
			</td>
			<td><input name="newsettings[external_logout]" value="{{ value_external_logout|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('bookingfrontend_host') }}:
				<br/> {{ lang('Needed for the return from the external_logout') }}: </td>
			<td><input name="newsettings[bookingfrontend_host]" value="{{ value_bookingfrontend_host|raw }}"></td>
		</tr>
		<tr>
			<td>{{ lang('uploader_filetypes') }}: jpg,gif,png</td>
			<td><input name="newsettings[uploader_filetypes]" value="{{ value_uploader_filetypes|raw }}"></td>
		</tr>

		{% endblock %}
		{% block footer %}
		<tr class="th">
			<td colspan="2">
				&nbsp;
			</td>
		</tr>
		<tr>
			<td colspan="2" align="center">
				<input type="submit" name="submit" value="{{ lang('submit') }}">
				<input type="submit" name="cancel" value="{{ lang('cancel') }}">
			</td>
		</tr>
	</table>
</form>
{% endblock %}
