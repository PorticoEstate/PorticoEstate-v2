{# Config template #}
{% block header %}
<form method="POST" action="{{ action_url }}">
	<table class="pure-table pure-table-bordered pure-table-striped pure-form">
		<thead>
			<tr>
				<th colspan="2">{{ title }}</th>
			</tr>
		</thead>
		{% endblock %}
		{% block body %}
		<tr>
			<td colspan="2">&nbsp;</td>
		</tr>
		<tr class="row_off">
			<td colspan="2">&nbsp;<b>{{ lang('helpdesk') }}/{{ lang('settings') }}</b></td>
		</tr>
		<tr>
			<td>{{ lang('organisation') }}:</td>
			<td><input name="newsettings[org_name]" value="{{ value_org_name|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('department') }}:</td>
			<td><input name="newsettings[department]" value="{{ value_department|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('org_unit_id') }}:</td>
			<td><input name="newsettings[org_unit_id]" value="{{ value_org_unit_id|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('app_name') }}: <br>
				{{ lang('default') }}: {{ lang('Helpdesk') }}</td>
			<td><input name="newsettings[app_name]" value="{{ value_app_name|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('new_message') }}:</br> '__ID__' </td>
			<td><input name="newsettings[new_message]" value="{{ value_new_message|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('set_user_message') }}:</br> '__ID__' </td>
			<td><input name="newsettings[set_user_message]" value="{{ value_set_user_message|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('update_message') }}:</br> '__ID__', '__#__' </td>
			<td><input name="newsettings[update_message]" value="{{ value_update_message|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('close_message') }}:</br> '__ID__', '__#__'</td>
			<td><input name="newsettings[close_message]" value="{{ value_close_message|raw }}" class="pure-u-1"/></td>
		</tr>

		<tr>
			<td>{{ lang('from_email') }}: </td>
			<td><input name="newsettings[from_email]" value="{{ value_from_email|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr class="row_off">
			<td>{{ lang('show_billable_hours') }}:</td>
			<td>
				<select name="newsettings[show_billable_hours]" class="pure-u-1">
					<option value="" {{ selected_show_billable_hours_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_show_billable_hours_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="row_off">
			<td colspan="2">&nbsp;<b>{{ lang('TTS') }}::{{ lang('settings') }}</b></td>
		</tr>
		<tr>
			<td>{{ lang('Open_translates_to') }}: <br>
				{{ lang('default') }}: {{ lang('Open') }}</td>
			<td><input name="newsettings[tts_lang_open]" value="{{ value_tts_lang_open|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('reopen_status') }}:</td>
			<td>
				<select name="newsettings[reopen_status]" class="pure-u-1">
					{{ hook_reopen_status|raw }}
				</select>
			</td>
		<tr>
		<tr>
			<td>{{ lang('take_over_status') }}:</td>
			<td>
				<select name="newsettings[take_over_status]" class="pure-u-1">
					{{ hook_take_over_status|raw }}
				</select>
			</td>
		<tr>
		<tr class="pure-table-odd">
			<td >{{ lang('TTS_disable_assign_to_user_on_add') }}:</td>
			<td>
				<select name="newsettings[tts_disable_userassign_on_add]" class="pure-u-1">
					<option value="" {{ selected_tts_disable_userassign_on_add_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_tts_disable_userassign_on_add_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="pure-table-odd">
			<td >{{ lang('TTS_disable_assign_to_group_on_add') }}:</td>
			<td>
				<select name="newsettings[tts_disable_groupassign_on_add]" class="pure-u-1">
					<option value="" {{ selected_tts_disable_groupassign_on_add_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_tts_disable_groupassign_on_add_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="pure-table-odd">
			<td >{{ lang('TTS_disable_priority') }}:</td>
			<td>
				<select name="newsettings[disable_priority]" class="pure-u-1">
					<option value="" {{ selected_disable_priority_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_disable_priority_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr>
			<td >{{ lang('TTS_default_interface') }}:</td>
			<td>
				<select name="newsettings[tts_default_interface]" class="pure-u-1">
					<option value="" {{ selected_tts_default_interface_|raw }}> {{ lang('Full') }}: </option>
					<option value="simplified" {{ selected_tts_default_interface_simplified|raw }}>{{ lang('simplified') }}</option>
				</select>
			</td>
		</tr>

		<tr>
			<td valign = 'top'>{{ lang('TTS_simplified_group') }}:</td>
			<td>
				<!--to be able to blank the setting - need an empty value-->
				<input type = 'hidden' name="newsettings[fmttssimple_group][]" value="">
				<table>
					{{ hook_fmttssimple_group|raw }}
				</table>
			</td>
		</tr>
		<tr>
			<td valign = 'top'>{{ lang('TTS_assign_group_candidates') }}:</td>
			<td>
				<!--to be able to blank the setting - need an empty value-->
				<input type = 'hidden' name="newsettings[fmtts_assign_group_candidates][]" value="">
				<table>
					{{ hook_fmtts_assign_group_candidates|raw }}
				</table>
			</td>
		</tr>
		<tr>
			<td>{{ lang('Mail_Notification') }}:</td>
			<td>
				<select name="newsettings[mailnotification]" class="pure-u-1">
					<option value="" {{ selected_mailnotification_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_mailnotification_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="row_off">
			<td>{{ lang('Owner_Notification_Project') }}.</td>
			<td>
				<select name="newsettings[notify_project_owner]" class="pure-u-1">
					<option value="" {{ selected_notify_project_owner_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_notify_project_owner_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="row_off">
			<td>{{ lang('Owner_Notification_TTS') }}.</td>
			<td>
				<select name="newsettings[ownernotification]" class="pure-u-1">
					<option value="" {{ selected_ownernotification_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_ownernotification_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('Assigned_Notification_TTS') }}.</td>
			<td>
				<select name="newsettings[assignednotification]" class="pure-u-1">
					<option value="" {{ selected_assignednotification_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_assignednotification_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="row_off">
			<td>{{ lang('Group_Notification_TTS') }}.</td>
			<td>
				<select name="newsettings[groupnotification]" class="pure-u-1">
					<option value="" {{ selected_groupnotification_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_groupnotification_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="row_off">
			<td>{{ lang('TTS_file_upload') }}:</td>
			<td>
				<select name="newsettings[fmttsfileupload]" class="pure-u-1">
					<option value="" {{ selected_fmttsfileupload_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_fmttsfileupload_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('priority_levels_TTS') }}.</td>
			<td>
				<select name="newsettings[prioritylevels]" class="pure-u-1">
					<option value="" {{ selected_prioritylevels_|raw }}>3</option>
					<option value="4" {{ selected_prioritylevels_4|raw }}>4</option>
					<option value="5" {{ selected_prioritylevels_5|raw }}>5</option>
				</select>
			</td>
		</tr>
		<tr class="row_off">
			<td>{{ lang('mandatory_title_TTS') }}.</td>
			<td>
				<select name="newsettings[tts_mandatory_title]" class="pure-u-1">
					<option value="" {{ selected_tts_mandatory_title_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_tts_mandatory_title_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>

		<tr>
			<td valign = 'top'>{{ lang('TTS_finnish_date') }}:</td>
			<td>
				<!--to be able to blank the setting - need an empty value-->
				<input type = 'hidden' name="newsettings[fmtts_group_finnish_date][]" value="">
				<table>
					{{ hook_fmtts_group_finnish_date|raw }}
				</table>
			</td>
		</tr>
		<tr class="row_off">
			<td>{{ lang('Use_ACL_for_helpdesk_categories') }}.</td>
			<td>
				<select name="newsettings[acl_at_tts_category]" class="pure-u-1">
					<option value="" {{ selected_acl_at_tts_category_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_acl_at_tts_category_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="row_on">
			<td>{{ lang('activate_autocreate_user') }}:</td>
			<td>
				<select name="newsettings[autocreate_user]" class="pure-u-1">
					<option value="" {{ selected_autocreate_user_|raw }}> {{ lang('NO') }}: </option>
					<option value="1" {{ selected_autocreate_user_1|raw }}> {{ lang('YES') }}: </option>
				</select>
			</td>
		</tr>
		<tr class="row_off">
			<td>{{ lang('autocreate_default_group') }}:</td>
			<td>
				<select name="newsettings[autocreate_default_group]" class="pure-u-1">
					{{ hook_autocreate_default_group|raw }}
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('uploader_filetypes') }}: jpg,gif,png</td>
			<td><input name="newsettings[uploader_filetypes]" value="{{ value_uploader_filetypes|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('age_before_anonymize') }}: days</td>
			<td><input type="number" name="newsettings[anonymize_days]" value="{{ value_anonymize_days|raw }}" class="pure-u-1"/></td>
		</tr>

		{% endblock %}
		{% block footer %}
		<tfoot>
			<tr>
				<td colspan="2">
					&nbsp;
				</td>
			</tr>
			<tr>
				<td colspan="2" align="center">
					<input type="submit" name="submit" value="{{ lang('submit') }}" class="pure-button"/>
					<input type="submit" name="cancel" value="{{ lang('cancel') }}" class="pure-button"/>
				</td>
			</tr>
		</tfoot>
	</table>
</form>
{% endblock %}
