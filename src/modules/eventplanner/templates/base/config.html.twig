{# Config template #}
{% block header %}
<form method="POST" action="{{ action_url }}">
	<table class="pure-table pure-table-bordered pure-table-striped pure-form">
		<tr class="th">
			<td colspan="2"><font color="{{ th_text }}">&nbsp;<b>{{ title }}</b></font></td>
		</tr>
		{% endblock %}
		{% block body %}
		<tr>
			<td>{{ lang('default_application_category') }}:</td>
			<td>
				<select name="newsettings[default_application_category]" class="pure-u-1">
					{{ hook_default_application_category|raw }}
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('default_vendor_category') }}:</td>
			<td>
				<select name="newsettings[default_vendor_category]" class="pure-u-1">
					{{ hook_default_vendor_category|raw }}
				</select>
			</td>
		</tr>
		<tr>
			<td>{{ lang('booking_interval') }}:</td>
			<td>
				<input type="number" name="newsettings[booking_interval]" value="{{ value_booking_interval|raw }}"class="pure-u-1"/>
			</td>
		</tr>
		<tr>
			<td>{{ lang('active_application_year') }}</td>
			<td><input type="number" name="newsettings[active_year]" value="{{ value_active_year|raw }}" class="pure-u-1"/></td>
		</tr>
		<tr>
			<td>{{ lang('receipt_blind_copy') }}:</td>
			<td>
				<input type="text" name="newsettings[receipt_blind_copy]" value="{{ value_receipt_blind_copy|raw }}" class="pure-u-1"/>
			</td>
		</tr>
		<tr>
			<td>{{ lang('receipt_subject') }}:</td>
			<td>
				<input type="text" name="newsettings[receipt_subject]" value="{{ value_receipt_subject|raw }}" class="pure-u-1"/>
			</td>
		</tr>
		<tr>
			<td>{{ lang('vendor_receipt_text') }}:</td>
			<td>
				<textarea id="vendor_receipt_text" name="newsettings[vendor_receipt_text]" class="pure-u-1">{{ value_vendor_receipt_text|raw }}</textarea>
			</td>
			{{ hook_vendor_receipt_text_editor|raw }}
		</tr>
		<tr>
			<td>{{ lang('customer_receipt_text') }}:</td>
			<td>
				<textarea id="customer_receipt_text" name="newsettings[customer_receipt_text]" class="pure-u-1">{{ value_customer_receipt_text|raw }}</textarea>
			</td>
			{{ hook_customer_receipt_text_editor|raw }}
		</tr>
		<tr>
			<td>{{ lang('canceled_subject') }}:</td>
			<td>
				<input type="text" name="newsettings[canceled_subject]" value="{{ value_canceled_subject|raw }}" class="pure-u-1"/>
			</td>
		</tr>
		<tr>
			<td>{{ lang('vendor_canceled_text') }}:</td>
			<td>
				<textarea id="vendor_canceled_text" name="newsettings[vendor_canceled_text]" class="pure-u-1">{{ value_vendor_canceled_text|raw }}</textarea>
			</td>
			{{ hook_vendor_canceled_text_editor|raw }}
		</tr>
		<tr>
			<td>{{ lang('customer_canceled_text') }}:</td>
			<td>
				<textarea id="customer_canceled_text" name="newsettings[customer_canceled_text]" class="pure-u-1">{{ value_customer_canceled_text|raw }}</textarea>
			</td>
			{{ hook_customer_canceled_text_editor|raw }}
		</tr>
		<tr>
			<td>{{ lang('uploader_filetypes') }}: jpg,gif,png</td>
			<td><input name="newsettings[uploader_filetypes]" value="{{ value_uploader_filetypes|raw }}" class="pure-u-1"/></td>
		</tr>

		{% endblock %}
		{% block footer %}

		<tr class="th">
			<td colspan="2">
				&nbsp;
			</td>
		</tr>

		<tr>
			<td colspan="2" align="center">
				<input type="submit" name="submit" value="{{ lang('submit') }}" class="pure-button"/>
				<input type="submit" name="cancel" value="{{ lang('cancel') }}" class="pure-button"/>
			</td>
		</tr>
	</table>
</form>
{% endblock %}
