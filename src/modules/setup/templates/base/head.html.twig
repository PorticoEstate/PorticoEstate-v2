{# Setup head template #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">    <style>
        
        /* Additional styling for setup */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }
        .container {
            max-width: 900px;
            margin: 0 auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        .section {
            margin-bottom: 30px;
        }
		.section-header {
			font-size: 1.5em;
			margin-bottom: 10px;
			color: #333;
			background-color: #f8f8f8;
		}
		.banner {
			background-color: #f8f8f8;
			padding: 10px;
			border-bottom: 1px solid #ddd;
		}
		.feedback {
			color: #ff0000;
			font-weight: bold;
			margin-top: 10px;
		}
		.logout-button {
			float: right;
			margin-top: -30px;
		}
        .stage-box {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
        .button {
            display: inline-block;
            padding: 8px 15px;
            background-color: #0066cc;
            color: white;
            text-decoration: none;
            border-radius: 3px;
            margin: 5px 0;
			width: 50%;
			text-align: center;
        }
        .button:hover {
            background-color: #004c99;
        }
        .warning {
            color: #cc0000;
            font-weight: bold;
        }
        .notice {
            background-color: #fff8dc;
            padding: 10px;
            border-left: 4px solid #ffeb3b;
            margin: 10px 0;
        }
			
			td, th
			{
				text-align: left;
				vertical-align: top;
			}
			
			td.appicon
			{
				vertical-align: middle;
			}

			thead, tfoot, .th
			{
				background: #486591;
				font-weight: bold;
				color: #fff;
			}

			tr
			{
				border-bottom: 1px solid #000;
			}

			#apps
			{
				border: 0;
				border-collapse: collapse;
				margin: 0;
				padding: 2px;
				margin: 10px auto;
				width: 75%
			}

			#manageheader
			{
				margin: 0 auto; 
				width: 750px;
			}

			#apps td
			{
				vertical-align: middle;
			}

			#analysis
			{
				list-style: none;
				margin: 5px 0;
				padding: 0;
			}

			#analysis li
			{
				background-color: #cdeb8b;
				border: 1px solid #008c00;
				margin: 2px;
				padding: 3px;
			}

			#header_contents
			{
				background-color: #ddd;
				border: 2px solid #999;
				margin: 1em auto;
				padding: 2em;
				width: 100em;
			}

			.banner
			{
				background-color: #4865f1;
				color: #fff;
				font-weight: bold;
				vertical-align: middle;
				width: 100%;
			}

			.button_group
			{
				text-align: center;
			}

			.feedback, .msg
			{
				color: #f00;
				font-weight: bold;
				padding: 5px;
				text-align: center;
			}
			
			.msg
			{
				background-color: #fcc;
				border: 1px solid #f00;
				margin: 10px auto;
				min-height: 20px;
				width: 75%;
			}
			
			.link
			{
				color: #fff;
			}

			.checkcell
			{
				text-align: center;
			}
			
			.row_err_table
			{
				background-color: #fca;
			}

			.row_remove_on
			{
				background-color: #c99;
			}

			.row_remove_off
			{
				background-color: #d99;
			}

			.row_err_gen_on
			{
				background-color: #fcc;
			}

			.row_err_gen_off, .err
			{
				background-color: #fdd;
			}

			.row_err_gen_on a
			{
				color: #666;
				font-weight: bold;
			}

			.row_install_on
			{
				background-color: #dfd;
			}

			.row_install_off
			{
				background-color: #cfc;
			}

			.row_on, .th_bright
			{
				background: #ddd;
			}
			
			.row_off
			{
				background: #eee;
			}

			.row_upgrade_on
			{
				background-color: #ccf;
			}

			.row_upgrade_off
			{
				background-color: #ddf;
			}

			/* Extra qualifiers are used here to override definitions above */
			.err, #analysis li.err
			{
				border: 1px solid #f00;
				color: #f00;
			}

			.warn, #analysis li.warn
			{
				background-color: #ff8;
				border-color: #fc0;
			}
    </style>
</head>
<body>
    <div class="container">
        <h1>{{ title }}</h1>
        <table width="100%" border="0" cellspacing="0" cellpadding="2">
        <tr class="banner">
        <td align="left">
        &nbsp;Portico Estate {{ lang('version') }} {{ pgw_ver }} {{ lang('setup') }} {{ configdomain }}
        </td>
        <td align="right">{{ logoutbutton|raw }}</td>
        </tr>
        </table>
        <div class="feedback">{{ lang_cookies_must_be_enabled|raw }}</div>
    </div>
</body>
</html>