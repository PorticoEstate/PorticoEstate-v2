{# Alert component with Designsystemet support #}
{% if is_designsystemet %}
    {# Use Designsystemet web component #}
    <ds-alert
        {% if variant %}variant="{{ variant }}"{% endif %}
        {% if dismissible %}dismissible{% endif %}
        {% if id %}id="{{ id }}"{% endif %}
        {% if class %}class="{{ class }}"{% endif %}
        {% if role %}role="{{ role }}"{% endif %}
    >
        {{ content|raw }}
    </ds-alert>
{% else %}
    {# Fallback to Bootstrap #}
    <div class="alert alert-{{ variant|default('info') }}{% if dismissible %} alert-dismissible fade show{% endif %}{% if class %} {{ class }}{% endif %}"
         {% if id %}id="{{ id }}"{% endif %}
         role="{{ role|default('alert') }}">
        {{ content|raw }}
        {% if dismissible %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        {% endif %}
    </div>
{% endif %}
