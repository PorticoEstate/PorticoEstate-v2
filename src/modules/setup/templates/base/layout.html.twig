{# Base layout template for setup module #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ title|default('Setup') }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            line-height: 1.6;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: #f9f9f9;
            border: 1px solid #ddd;
        }
        .header {
            background: #444;
            color: white;
            padding: 10px 20px;
            margin-bottom: 20px;
        }
        .footer {
            margin-top: 30px;
            padding: 10px;
            text-align: center;
            border-top: 1px solid #ddd;
        }
        .section {
            margin-bottom: 20px;
            padding: 15px;
            background: white;
            border: 1px solid #eee;
        }
        .section-header {
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
        .stage-box {
            padding: 10px;
            margin: 10px 0;
            background: #f5f5f5;
        }
        .warning {
            color: #c00;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        input[type="text"], 
        input[type="password"] {
            padding: 8px;
            width: 100%;
            box-sizing: border-box;
        }
        input[type="submit"] {
            padding: 8px 16px;
            background: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            margin: 5px 0;
        }
        input[type="submit"]:hover {
            background: #45a049;
        }
        a {
            color: #2196F3;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        /* Add any additional styles needed */
    </style>
    {% block head %}{% endblock %}
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>{{ header_title|default('Setup') }}</h1>
            {% if subtitle %}
            <h2>{{ subtitle }}</h2>
            {% endif %}
        </div>
        
        <div class="content">
            {% block content %}{% endblock %}
        </div>
        
        <div class="footer">
            {% block footer %}
            <p>{{ lang('Powered by') }} <a href="https://www.github.com">GitHub</a></p>
            {% endblock %}
        </div>
    </div>
</body>
</html>